mixin productHistory(history = {})
    .product
        p.cardtext= history.date
            h5.card-title
                |PayPal ID:<br>
                i.a(style='color: black') #{history.idPaypal}
            |PURCHASE ID:<br>
            i.a(style='color: black') #{history._id}<br>
            span --------------------------------<p>
            each product in history.productList
                b.cardtext= product.name
                p.cardtext= "Price: " +product.price+"€"
                p.cardtext= "Num: " +product.num
                span --------------------------------<p>
            b.cardtext= "Total Price: "+history.precioTotal+"€"