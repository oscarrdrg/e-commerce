mixin productCard(product = {})
    .product
        .card-body
        img.card-img-top.imgfluid(src=`/uploads/${product.photo || 'product.png'}`)
        .card-body
            h5.card-title
                a(href=`/product/${product.slug}` style='color: black') #{product.name}
            p.cardtext= "Price: "+product.price+"â‚¬"
            if user
                form.form(action="/products" method="POST" enctype='application/x-wwwform-urlencoded')
                    input(type="hidden" value=`${product._id}` name="id")
                    input(type="hidden" value=`${user._id}` name="user")
                    button(type="submit" style="background-color:green;border-color:green;color:white" class="btn btn-primary") Add to card
            else
                a.btn.btn-primary(style="background-color:red;border-color:red;color:white") You must be logged in